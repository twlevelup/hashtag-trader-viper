%link{:rel=>"stylesheet", :type=>"text/css", :href=>"/css/dashboard.css"}
%link{:rel=>"stylesheet", :type=>"text/css", :href=>"/css/easypiechart.css"}

.row
	.span12
		.navbar.navbar-fixed-top
			.navbar-inner
				.span4
					%a.brand(href="#") 
						%span #
					%ul.nav
						%li.active
							%a(href="#")
								Dashboard
						%li
							%a(href="#")
								Hashtags
						%li
							%ul.nav.nav-tabs
								%li.dropdown
									%a.dropdown-toogle{:data=>{:toggle=>'dropdown'}, :href=>'#'}
										Tradings
										%b.caret
									%ul.dropdown-menu.dpMenuTradings
										%li
											%i.icon-shopping-cart
											Buyings
										%li
											$ Sellings
				.span4
					%form.navbar-search.frmSearch
						%input.seach-query{:type=>'text', :placeholder=>'Search HashTag', :id=>'input_search',:maxlength=>"45"}
				.span4
					%ul.nav.nav-tabs.pull-right
						%li.dropdown.userDetails
							%a.dropdown-toogle{:data=>{:toggle=>'dropdown'}, :href=>'#'}
								Welcome User
								%b.caret.pull-right
							%ul.dropdown-menu.dpMenuUser
								%li
									%i.icon-wrench 
									User Settings 
								%li
									%i.icon-off 
									LogOut

.row.rowNews
	.span9
		.displayNews
			.newsTitle
				%h2 #HashTag News
			.newsBody
				%p Tagline
				%p
					%a.btn.btn-primary.btn-large
						Learn More
			.newsFooter
	.span3
		%span.chart{:data=>{:percent=>"86"}}
			%span.percent
		%span.chart{:data=>{:percent=>"18"}}
			%span.percent

.row.rowNews
	.span12
		.displayStatistics
			.newsTitle
				%h2 #HashTag News
			.newsBody
				%p Tagline
				%p
					%a.btn.btn-primary.btn-large
						Learn More
			.newsFooter
.row
	.span3
		.alert.alert-info
			%button.close{:type=>'button', :data=>{:dismiss=>'alert'}}
				&times;
			%strong
				Warning!
			Best check yo self, you're note looking too good.

%span.btn.js_update
	Update Chart

